{% extends 'base.html.twig' %}

{% block title %}Symfony Recipe - Login{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="mt-4">Formulaire de connexion</h1>

        {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
        {% endif %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-dismissible alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}
        

        <form action="{{ path('app_security_login') }}" method="post">
            <div class="form-group">
                <label for="username" class="form-label mt-4">Adresse mail :</label>
                <input type="email" class="form-control" id="username" placeholder="exemple@symfonyRecipe.fr" name="_username" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <label for="password" class="form-label mt-4">Mot de passe :</label>
                <input type="password" class="form-control" id="password" placeholder="********" name="_password">
            </div>

            <button type="submit" class="btn btn-primary mt-4">Se connecter</button>
        </form>
    </div>

{% endblock %}
