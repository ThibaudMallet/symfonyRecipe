{% extends "base.html.twig" %}

{% block title %}Symfony Recipe - Les recttes publiques{% endblock %}

{% block body %}

    <div class="container mt-4">

        {% if not recipes.items is same as([]) %}
        <h1>Recette de la communauté</h1>

        <div class="d-flex justify-content-center flex-wrap">
            {% for recipe in recipes %}
            <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                <div class="card-header">Recette n°{{ recipe.id }}</div>
                <div class="card-body">
                    <h4 class="card-title">{{ recipe.name }}</h4>
                    <p class="card-text">{{ recipe.description|slice(0, 100) ~ '...' }}</p>
                </div>
            </div>
            {% endfor %}
        </div>
        {% else %}
            <h4>Il n'y a pas de recettes</h4>
        {% endif %}
    </div>

{% endblock %}